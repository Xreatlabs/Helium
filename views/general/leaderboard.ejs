<html <% if (isDarkMode) { %>class="dark"<% } %>>
<head>
  <title><%= settings.name %> - AFK Leaderboard</title>
  <link rel="icon" type="image/x-icon" href="../assets/favicon.png">
  <script>
    (function() {
      try {
        var ls = localStorage.getItem('darkMode');
        var preferDark = (ls === 'true') || (ls === null && window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches);
        if (preferDark) document.documentElement.classList.add('dark');
        else document.documentElement.classList.remove('dark');
      } catch (e) {}
    })();
  </script>
  <link rel="stylesheet" href="../assets/tailwind.css">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700;800;900&display=swap" rel="stylesheet">
</head>

<body class="bg-gray-100 dark:bg-gray-900 transition-colors duration-200" style="font-family: 'Inter', sans-serif;">
  <div>
    <%- include('../components/navigation') %>
    <div class="md:pl-64 flex flex-col flex-1 min-h-screen">
      <main class="flex-1 pb-8">
        <div class="py-6">
          <%- include('../components/darkmode-toggle') %>
          <%- include('../components/skeleton') %>
          <div class="hidden max-w-7xl pt-8 mx-auto px-4 sm:px-6 md:px-8" id="content">
            
            <!-- Header -->
            <div class="mb-8 text-center">
              <h1 class="text-4xl font-bold text-gray-900 dark:text-white tracking-tight mb-2">
                ‚è±Ô∏è AFK Leaderboard
              </h1>
              <p class="text-gray-500 dark:text-gray-400">Top players ranked by AFK time</p>
            </div>

            <!-- AFK Leaderboard -->
            <div id="afk-leaderboard">
              <div id="afk-loading" class="flex flex-col items-center justify-center py-20">
                <svg class="animate-spin h-12 w-12 text-blue-500 mb-4" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
                  <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
                  <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
                </svg>
                <p class="text-gray-500 dark:text-gray-400">Loading AFK leaderboard...</p>
              </div>

              <div id="afk-error" class="hidden">
                <div class="rounded-3xl bg-red-50 dark:bg-red-900/20 p-8 border-2 border-red-200 dark:border-red-800">
                  <p class="text-center text-red-700 dark:text-red-400">Unable to load AFK leaderboard</p>
                </div>
              </div>

              <div id="afk-content" class="hidden">
                <!-- Podium -->
                <div id="afk-podium" class="mb-12">
                  <div class="flex items-end justify-center gap-4 max-w-4xl mx-auto">
                    <!-- 2nd Place -->
                    <div id="afk-rank-2" class="flex-1 hidden">
                      <div class="bg-gradient-to-br from-gray-300 to-gray-400 dark:from-gray-600 dark:to-gray-700 rounded-t-3xl p-6 text-center" style="height: 280px;">
                        <div class="flex flex-col items-center justify-center h-full">
                          <div class="text-5xl mb-3">ü•à</div>
                          <img id="afk-avatar-2" class="h-20 w-20 rounded-full ring-4 ring-gray-200 mb-3" src="" alt="">
                          <div class="text-lg font-bold text-white mb-1" id="afk-name-2"></div>
                          <div class="flex items-center mt-3">
                            <span class="text-2xl font-bold text-white" id="afk-time-2"></span>
                          </div>
                        </div>
                      </div>
                      <div class="bg-gray-300 dark:bg-gray-700 rounded-b-3xl p-4 text-center">
                        <div class="text-2xl font-bold text-gray-700 dark:text-gray-200">#2</div>
                      </div>
                    </div>

                    <!-- 1st Place -->
                    <div id="afk-rank-1" class="flex-1 hidden">
                      <div class="bg-gradient-to-br from-blue-400 to-blue-500 rounded-t-3xl p-6 text-center shadow-2xl" style="height: 350px;">
                        <div class="flex flex-col items-center justify-center h-full">
                          <div class="text-6xl mb-4 animate-bounce">ü•á</div>
                          <img id="afk-avatar-1" class="h-24 w-24 rounded-full ring-4 ring-blue-300 mb-4 shadow-lg" src="" alt="">
                          <div class="text-xl font-black text-white mb-1" id="afk-name-1"></div>
                          <div class="mt-4 flex items-center">
                            <span class="text-3xl font-black text-white" id="afk-time-1"></span>
                          </div>
                        </div>
                      </div>
                      <div class="bg-blue-400 rounded-b-3xl p-4 text-center">
                        <div class="text-3xl font-black text-blue-900">#1</div>
                      </div>
                    </div>

                    <!-- 3rd Place -->
                    <div id="afk-rank-3" class="flex-1 hidden">
                      <div class="bg-gradient-to-br from-orange-300 to-orange-400 dark:from-orange-600 dark:to-orange-700 rounded-t-3xl p-6 text-center" style="height: 240px;">
                        <div class="flex flex-col items-center justify-center h-full">
                          <div class="text-5xl mb-3">ü•â</div>
                          <img id="afk-avatar-3" class="h-20 w-20 rounded-full ring-4 ring-orange-200 mb-3" src="" alt="">
                          <div class="text-lg font-bold text-white mb-1" id="afk-name-3"></div>
                          <div class="mt-3 flex items-center">
                            <span class="text-2xl font-bold text-white" id="afk-time-3"></span>
                          </div>
                        </div>
                      </div>
                      <div class="bg-orange-300 dark:bg-orange-700 rounded-b-3xl p-4 text-center">
                        <div class="text-2xl font-bold text-orange-800 dark:text-orange-100">#3</div>
                      </div>
                    </div>
                  </div>
                </div>

                <!-- Ranks 4-20 -->
                <div id="afk-remaining" class="hidden max-w-4xl mx-auto">
                  <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-4 text-center">Ranks 4-20</h3>
                  <div class="bg-white dark:bg-gray-800 rounded-3xl shadow-lg overflow-hidden">
                    <div class="max-h-96 overflow-y-auto" id="afk-ranks-4-20"></div>
                  </div>
                </div>

                <div id="afk-empty" class="hidden text-center py-12">
                  <p class="text-gray-500 dark:text-gray-400">No AFK time recorded yet. Visit the AFK page!</p>
                </div>
              </div>
            </div>

          </div>
        </div>
      </main>
      <%- include('../components/footer') %>
    </div>
  </div>
  
  <script>
    async function loadAFKLeaderboard() {
      try {
        const response = await fetch('/api/leaderboard/afk');
        const data = await response.json();
        
        document.getElementById('afk-loading').classList.add('hidden');
        
        if (data.success && data.leaderboard && data.leaderboard.length > 0) {
          document.getElementById('afk-content').classList.remove('hidden');
          
          // Display top 3
          const top3 = data.leaderboard.slice(0, 3);
          top3.forEach((user) => {
            const rank = user.rank;
            const avatarUrl = user.avatar 
              ? `https://cdn.discordapp.com/avatars/${user.userId}/${user.avatar}.png?size=256`
              : 'https://cdn.discordapp.com/embed/avatars/0.png';
            
            const container = document.getElementById(`afk-rank-${rank}`);
            if (container) {
              container.classList.remove('hidden');
              document.getElementById(`afk-avatar-${rank}`).src = avatarUrl;
              document.getElementById(`afk-name-${rank}`).textContent = user.global_name;
              document.getElementById(`afk-time-${rank}`).textContent = user.afkHours.toFixed(1) + ' hrs';
            }
          });
          
          // Display ranks 4-20
          const remaining = data.leaderboard.slice(3, 20);
          if (remaining.length > 0) {
            document.getElementById('afk-remaining').classList.remove('hidden');
            document.getElementById('afk-ranks-4-20').innerHTML = remaining.map(user => {
              const avatarUrl = user.avatar 
                ? `https://cdn.discordapp.com/avatars/${user.userId}/${user.avatar}.png?size=128`
                : 'https://cdn.discordapp.com/embed/avatars/0.png';
              
              return `
                <div class="flex items-center justify-between p-4 hover:bg-gray-50 dark:hover:bg-gray-700/50 transition border-b border-gray-200 dark:border-gray-700">
                  <div class="flex items-center space-x-4">
                    <div class="text-2xl font-bold text-gray-400 w-12">#${user.rank}</div>
                    <img class="h-12 w-12 rounded-full ring-2 ring-gray-200 dark:ring-gray-600" src="${avatarUrl}" alt="">
                    <div class="text-sm font-semibold text-gray-900 dark:text-gray-100">${user.global_name}</div>
                  </div>
                  <div class="text-lg font-bold text-blue-600 dark:text-blue-400">${user.afkHours.toFixed(1)} hrs</div>
                </div>
              `;
            }).join('');
          }
        } else {
          document.getElementById('afk-content').classList.remove('hidden');
          document.getElementById('afk-empty').classList.remove('hidden');
        }
      } catch (error) {
        console.error('Error:', error);
        document.getElementById('afk-loading').classList.add('hidden');
        document.getElementById('afk-error').classList.remove('hidden');
      }
    }
    
    document.addEventListener('DOMContentLoaded', () => {
      loadAFKLeaderboard();
    });
  </script>
</body>
</html>
