<html class="h-full<% if (typeof isDarkMode !== 'undefined' && isDarkMode) { %> dark<% } %>">

<head>
  <title><%= typeof settings !== 'undefined' && settings.name ? settings.name : 'Helium' %></title>
  <link rel="icon" type="image/x-icon" href="../assets/favicon.png">
  <script>
    (function() {
      try {
        var ls = localStorage.getItem('darkMode');
        var preferDark = (ls === 'true') || (ls === null && window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches);
        if (preferDark) document.documentElement.classList.add('dark');
        else document.documentElement.classList.remove('dark');
      } catch (e) {}
    })();
  </script>
  <link rel="stylesheet" href="../assets/tailwind.css">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <script src="https://unpkg.com/@popperjs/core@2.10.1/dist/umd/popper.min.js"></script>

  <!-- Inter font -->
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<body class="h-full bg-gray-100 dark:bg-gray-900 p-12 transition-colors duration-200" style="font-family: 'Inter'">
  <main class="grid min-h-full place-items-center px-6 py-24 sm:py-32 lg:px-8">
    <div class="text-center">
      <p class="text-base font-semibold text-gray-400 dark:text-gray-500">500</p>
      <h1 class="mt-4 text-3xl font-bold tracking-tight text-gray-700 dark:text-gray-200 sm:text-5xl">Internal server error</h1>
      <p class="mt-6 text-base leading-7 text-gray-600 dark:text-gray-400">This error was encountered on page render:</p>
    </div>
    <div class="bg-gray-300 dark:bg-gray-800 px-8 py-2 w-3/4 mt-4 rounded-t-3xl text-gray-600 dark:text-gray-300"><span class="text-gray-600 dark:text-gray-300 text-xs font-semibold">Node.js process error on Helium 1</span></div>
    <pre class="text-xs bg-gray-200 dark:bg-gray-800 pb-8 w-3/4 pl-8 pr-8 pt-2 mb-6 rounded-b-3xl text-gray-600 dark:text-gray-300"><%= err %></pre>
    <div class="text-center">
      <div class="mt-10 flex items-center justify-center gap-x-6">
        <a href="../dashboard" class="transition inline-flex items-center rounded-2xl bg-gray-200 dark:bg-gray-800 px-8 py-2 text-sm font-medium text-gray-600 dark:text-gray-300 hover:bg-gray-300 dark:hover:bg-gray-700 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-gray-600">Go back</a>
      </div>
    </div>
  </main>
</body>
