<html<% if (isDarkMode) { %> class="dark"<% } %>>
<head>
  <title><%= settings.name %> - Daily Rewards</title>
  <link rel="icon" type="image/x-icon" href="../assets/favicon.png">
  <script>
    (function() {
      try {
        var ls = localStorage.getItem('darkMode');
        var preferDark = (ls === 'true') || (ls === null && window.matchMedia && window.matchMedia('(prefers-color-scheme: dark)').matches);
        if (preferDark) document.documentElement.classList.add('dark');
        else document.documentElement.classList.remove('dark');
      } catch (e) {}
    })();
  </script>
  <link rel="stylesheet" href="../assets/tailwind.css">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>

<body class="bg-gray-50 dark:bg-gray-900 transition-colors duration-200" style="font-family: 'Inter', sans-serif;">
  <div>
    <%- include('../components/navigation') %>
    <div class="md:pl-64 flex flex-col flex-1 min-h-screen">
      <main class="flex-1 pb-8">
        <div class="py-6">
          <%- include('../components/darkmode-toggle') %>
          <%- include('../components/skeleton') %>
          <div class="hidden max-w-7xl pt-8 mx-auto px-4 sm:px-6 md:px-8" id="content">
            
            <!-- Header -->
            <div class="lg:flex lg:items-center lg:justify-between rounded-3xl mb-8">
              <div class="min-w-0 flex-1">
                <div class="flex">
                  <div class="relative">
                    <div class="bg-gradient-to-br from-yellow-400 to-orange-500 rounded-2xl h-11 w-11 text-center flex text-white">
                      <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="currentColor" class="w-6 h-6 mt-2.5 ml-2.5">
                        <path d="M9.375 3a1.875 1.875 0 0 0 0 3.75h1.875v4.5H3.375A1.875 1.875 0 0 1 1.5 9.375v-.75c0-1.036.84-1.875 1.875-1.875h3.193A3.375 3.375 0 0 1 12 2.753a3.375 3.375 0 0 1 5.432 3.997h3.943c1.035 0 1.875.84 1.875 1.875v.75c0 1.036-.84 1.875-1.875 1.875H12.75v-4.5h1.875a1.875 1.875 0 1 0-1.875-1.875V6.75h-1.5V4.875C11.25 3.839 10.41 3 9.375 3ZM11.25 12.75H3v6.75a2.25 2.25 0 0 0 2.25 2.25h6v-9ZM12.75 12.75v9h6.75a2.25 2.25 0 0 0 2.25-2.25v-6.75h-9Z" />
                      </svg>
                    </div>
                  </div>
                  <div class="relative ml-4">
                    <h2 class="text-xl font-semibold text-gray-700 dark:text-gray-200 sm:truncate tracking-tight">Daily Rewards</h2>
                    <p class="text-xs font-thin text-gray-500 dark:text-gray-400">Claim your daily login rewards and build streaks!</p>
                  </div>
                </div>
              </div>
            </div>

            <!-- Main Content -->
            <div class="grid grid-cols-1 lg:grid-cols-2 gap-6">
              
              <!-- Claim Card -->
              <div class="bg-white dark:bg-gray-800 rounded-3xl p-8 border border-gray-200 dark:border-gray-700">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-4">Today's Reward</h3>
                
                <div id="reward-status" class="text-center py-8">
                  <div class="animate-spin rounded-full h-12 w-12 border-b-2 border-blue-600 mx-auto"></div>
                  <p class="mt-4 text-gray-600 dark:text-gray-400">Loading...</p>
                </div>

                <div id="reward-content" class="hidden">
                  <div class="bg-gradient-to-br from-blue-50 to-indigo-50 dark:from-blue-900/20 dark:to-indigo-900/20 rounded-2xl p-6 mb-6">
                    <div class="text-center">
                      <div class="text-5xl font-bold text-blue-600 dark:text-blue-400" id="reward-amount">0</div>
                      <div class="text-sm text-gray-600 dark:text-gray-400 mt-2">Coins Available</div>
                    </div>
                  </div>

                  <button id="claim-btn" onclick="claimReward()" class="w-full py-4 bg-gradient-to-r from-blue-600 to-indigo-600 hover:from-blue-700 hover:to-indigo-700 text-white rounded-xl font-semibold transition shadow-lg">
                    Claim Reward üéÅ
                  </button>

                  <div id="claimed-msg" class="hidden mt-4 p-4 bg-green-50 dark:bg-green-900/20 border border-green-200 dark:border-green-800 rounded-xl">
                    <p class="text-green-800 dark:text-green-200 text-center font-medium">‚úÖ Reward claimed! Come back tomorrow!</p>
                  </div>

                  <div id="next-reward" class="mt-4 text-center text-sm text-gray-600 dark:text-gray-400"></div>
                </div>
              </div>

              <!-- Streak Stats -->
              <div class="bg-white dark:bg-gray-800 rounded-3xl p-8 border border-gray-200 dark:border-gray-700">
                <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-6">Your Streak</h3>
                
                <div class="space-y-6">
                  <div class="flex items-center justify-between p-4 bg-gray-50 dark:bg-gray-700/50 rounded-xl">
                    <div class="flex items-center">
                      <div class="bg-orange-500 rounded-full p-3 mr-4">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="white" class="w-6 h-6">
                          <path fill-rule="evenodd" d="M12.963 2.286a.75.75 0 0 0-1.071-.136 9.742 9.742 0 0 0-3.539 6.176A7.547 7.547 0 0 1 6.648 6.61a.75.75 0 0 0-1.152-.082A9 9 0 1 0 15.68 4.534a7.46 7.46 0 0 1-2.717-2.248ZM15.75 14.25a3.75 3.75 0 1 1-7.313-1.172c.628.465 1.35.81 2.133 1a5.99 5.99 0 0 1 1.925-3.546 3.75 3.75 0 0 1 3.255 3.718Z" clip-rule="evenodd" />
                        </svg>
                      </div>
                      <div>
                        <div class="text-sm text-gray-600 dark:text-gray-400">Current Streak</div>
                        <div class="text-2xl font-bold text-gray-900 dark:text-gray-100" id="current-streak">0</div>
                      </div>
                    </div>
                    <div class="text-gray-500 dark:text-gray-400">days</div>
                  </div>

                  <div class="flex items-center justify-between p-4 bg-gray-50 dark:bg-gray-700/50 rounded-xl">
                    <div class="flex items-center">
                      <div class="bg-yellow-500 rounded-full p-3 mr-4">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="white" class="w-6 h-6">
                          <path fill-rule="evenodd" d="M10.788 3.21c.448-1.077 1.976-1.077 2.424 0l2.082 5.006 5.404.434c1.164.093 1.636 1.545.749 2.305l-4.117 3.527 1.257 5.273c.271 1.136-.964 2.033-1.96 1.425L12 18.354 7.373 21.18c-.996.608-2.231-.29-1.96-1.425l1.257-5.273-4.117-3.527c-.887-.76-.415-2.212.749-2.305l5.404-.434 2.082-5.005Z" clip-rule="evenodd" />
                        </svg>
                      </div>
                      <div>
                        <div class="text-sm text-gray-600 dark:text-gray-400">Longest Streak</div>
                        <div class="text-2xl font-bold text-gray-900 dark:text-gray-100" id="longest-streak">0</div>
                      </div>
                    </div>
                    <div class="text-gray-500 dark:text-gray-400">days</div>
                  </div>

                  <div class="flex items-center justify-between p-4 bg-gray-50 dark:bg-gray-700/50 rounded-xl">
                    <div class="flex items-center">
                      <div class="bg-green-500 rounded-full p-3 mr-4">
                        <svg xmlns="http://www.w3.org/2000/svg" viewBox="0 0 24 24" fill="white" class="w-6 h-6">
                          <path d="M12 15a3 3 0 1 0 0-6 3 3 0 0 0 0 6Z" />
                          <path fill-rule="evenodd" d="M1.323 11.447C2.811 6.976 7.028 3.75 12.001 3.75c4.97 0 9.185 3.223 10.675 7.69.12.362.12.752 0 1.113-1.487 4.471-5.705 7.697-10.677 7.697-4.97 0-9.186-3.223-10.675-7.69a1.762 1.762 0 0 1 0-1.113ZM17.25 12a5.25 5.25 0 1 1-10.5 0 5.25 5.25 0 0 1 10.5 0Z" clip-rule="evenodd" />
                        </svg>
                      </div>
                      <div>
                        <div class="text-sm text-gray-600 dark:text-gray-400">Total Logins</div>
                        <div class="text-2xl font-bold text-gray-900 dark:text-gray-100" id="total-logins">0</div>
                      </div>
                    </div>
                    <div class="text-gray-500 dark:text-gray-400">times</div>
                  </div>
                </div>
              </div>

            </div>

            <!-- Milestones -->
            <div class="mt-6 bg-white dark:bg-gray-800 rounded-3xl p-8 border border-gray-200 dark:border-gray-700">
              <h3 class="text-lg font-semibold text-gray-900 dark:text-gray-100 mb-6">Streak Milestones</h3>
              <div class="grid grid-cols-1 md:grid-cols-3 gap-4">
                <div class="p-4 bg-gradient-to-br from-blue-50 to-cyan-50 dark:from-blue-900/20 dark:to-cyan-900/20 rounded-xl border border-blue-200 dark:border-blue-800">
                  <div class="text-center">
                    <div class="text-3xl font-bold text-blue-600 dark:text-blue-400">7 Days</div>
                    <div class="text-sm text-gray-600 dark:text-gray-400 mt-2">+100 coins, +512 MB RAM</div>
                  </div>
                </div>
                <div class="p-4 bg-gradient-to-br from-purple-50 to-pink-50 dark:from-purple-900/20 dark:to-pink-900/20 rounded-xl border border-purple-200 dark:border-purple-800">
                  <div class="text-center">
                    <div class="text-3xl font-bold text-purple-600 dark:text-purple-400">14 Days</div>
                    <div class="text-sm text-gray-600 dark:text-gray-400 mt-2">+200 coins, +1 GB RAM, +2 GB Disk</div>
                  </div>
                </div>
                <div class="p-4 bg-gradient-to-br from-yellow-50 to-orange-50 dark:from-yellow-900/20 dark:to-orange-900/20 rounded-xl border border-yellow-200 dark:border-yellow-800">
                  <div class="text-center">
                    <div class="text-3xl font-bold text-yellow-600 dark:text-yellow-400">30 Days</div>
                    <div class="text-sm text-gray-600 dark:text-gray-400 mt-2">+500 coins, +2 GB RAM, +5 GB Disk, +50% CPU</div>
                  </div>
                </div>
              </div>
            </div>

          </div>
        </div>
      </main>
    </div>
  </div>

  <script>
    // Load reward status
    async function loadRewardStatus() {
      try {
        const response = await fetch('/api/gamification/daily-reward/status');
        const data = await response.json();

        if (data.success) {
          document.getElementById('current-streak').textContent = data.streak || 0;
          document.getElementById('longest-streak').textContent = data.longestStreak || 0;
          document.getElementById('total-logins').textContent = data.totalLogins || 0;

          if (data.canClaim) {
            const baseReward = <%= settings.api?.client?.coins?.dailyRewards?.baseReward || 10 %>;
            const bonusPerDay = <%= settings.api?.client?.coins?.dailyRewards?.streakBonus?.bonusPerDay || 5 %>;
            const streakBonus = data.streak > 0 ? data.streak * bonusPerDay : 0;
            const totalReward = baseReward + streakBonus;
            
            document.getElementById('reward-amount').textContent = totalReward;
            document.getElementById('claim-btn').classList.remove('hidden');
          } else {
            document.getElementById('claim-btn').classList.add('hidden');
            document.getElementById('claimed-msg').classList.remove('hidden');
            const hours = Math.floor(data.nextRewardIn / 3600000);
            const minutes = Math.floor((data.nextRewardIn % 3600000) / 60000);
            document.getElementById('next-reward').textContent = `Next reward in ${hours}h ${minutes}m`;
          }

          document.getElementById('reward-status').classList.add('hidden');
          document.getElementById('reward-content').classList.remove('hidden');
        }
      } catch (error) {
        console.error('Error loading reward status:', error);
        document.getElementById('reward-status').innerHTML = '<p class="text-red-600">Error loading rewards</p>';
      }
    }

    // Claim reward
    async function claimReward() {
      const btn = document.getElementById('claim-btn');
      btn.disabled = true;
      btn.textContent = 'Claiming...';

      try {
        const response = await fetch('/api/gamification/daily-reward');
        const data = await response.json();

        if (data.success && data.claimed) {
          document.getElementById('reward-amount').textContent = data.rewards.coins;
          document.getElementById('claim-btn').classList.add('hidden');
          document.getElementById('claimed-msg').classList.remove('hidden');
          
          // Update streak
          document.getElementById('current-streak').textContent = data.streak;
          document.getElementById('longest-streak').textContent = data.longestStreak;

          // Show success message
          const msg = document.getElementById('claimed-msg');
          msg.innerHTML = `<p class="text-green-800 dark:text-green-200 text-center font-medium">‚úÖ You received ${data.rewards.coins} coins!${data.isMilestone ? ' üéâ Milestone reached!' : ''}</p>`;
          
          setTimeout(() => window.location.reload(), 2000);
        } else {
          btn.textContent = 'Already Claimed';
        }
      } catch (error) {
        console.error('Error claiming reward:', error);
        btn.textContent = 'Error';
      }
    }

    // Load on page load
    document.addEventListener('DOMContentLoaded', loadRewardStatus);
  </script>
</body>
</html>
