                        <span class="text-sm font-medium text-gray-700 dark:text-gray-300">Features</span>
                      </div>
                      <svg class="category-icon w-4 h-4 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path></svg>
                    </div>
                    <div class="category-items ml-4 mt-1">
                      <button onclick="showTab('renewal')" class="sub-tab-button block w-full text-left px-3 py-2 text-sm text-gray-600 dark:text-gray-400 rounded-lg">Renewal System</button>
                      <button onclick="showTab('linkvertise')" class="sub-tab-button block w-full text-left px-3 py-2 text-sm text-gray-600 dark:text-gray-400 rounded-lg">Linkvertise</button>
                      <button onclick="showTab('afk')" class="sub-tab-button block w-full text-left px-3 py-2 text-sm text-gray-600 dark:text-gray-400 rounded-lg">AFK System</button>
                    </div>
                  </div>

                  <!-- System -->
                  <div class="category-group">
                    <div class="category-header px-3 py-2 rounded-lg flex items-center justify-between" onclick="toggleCategory('system')">
                      <div class="flex items-center gap-2">
                        <svg class="w-4 h-4 text-red-500" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 3v2m6-2v2M9 19v2m6-2v2M5 9H3m2 6H3m18-6h-2m2 6h-2M7 19h10a2 2 0 002-2V7a2 2 0 00-2-2H7a2 2 0 00-2 2v10a2 2 0 002 2zM9 9h6v6H9V9z"></path></svg>
