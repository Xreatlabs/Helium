<footer class="bottom-0 bg-gray-100 dark:bg-gray-900 py-4">
  <div class="max-w-7xl mx-auto py-3 sm:px-4 md:px-4 flex justify-between shadow-sm items-center text-xs text-gray-500 dark:text-gray-400 rounded-2xl border border-gray-200 dark:border-gray-700">
    <div>
      <p class="font-medium text-gray-600 dark:text-gray-300">&copy; 2024 <%= settings.name %>. All rights reserved.</p>
    </div>
    <div>
      <span class="font-thin text-gray-500 dark:text-gray-400">
        Powered by
        <a class="transition hover:text-gray-700 dark:hover:text-gray-200" href="https://github.com/xreatlabs/helium" target="_blank">Helium</a>
        <span class="bg-gray-200 dark:bg-gray-700 text-gray-500 dark:text-gray-300 px-3 py-1 rounded-full mr-1 ml-2">v<%= settings.version %></span>
        <span class="bg-gray-200 dark:bg-gray-700 text-gray-500 dark:text-gray-300 px-3 py-1 rounded-full" id="loadingTime"></span>
      </span>
    </div>
  </div>
</footer>
<script>
  var before_loadtime = new Date().getTime();
  window.onload = Pageloadtime;

  function Pageloadtime() {
    var aftr_loadtime = new Date().getTime();
    // Time calculating in seconds  
    pgloadtime = (aftr_loadtime - before_loadtime) / 1000

    document.getElementById("loadingTime").innerHTML = pgloadtime + "s";
  }
</script>