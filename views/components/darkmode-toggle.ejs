<!-- Dark mode toggle button in top right -->
<style>
  @keyframes buttonGlow {
    0%, 100% {
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1), 0 2px 4px -1px rgba(0, 0, 0, 0.06);
    }
    50% {
      box-shadow: 0 10px 15px -3px rgba(59, 130, 246, 0.4), 0 4px 6px -2px rgba(59, 130, 246, 0.3);
    }
  }
  
  @keyframes buttonGlowDark {
    0%, 100% {
      box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.3), 0 2px 4px -1px rgba(0, 0, 0, 0.2);
    }
    50% {
      box-shadow: 0 10px 15px -3px rgba(147, 51, 234, 0.5), 0 4px 6px -2px rgba(147, 51, 234, 0.4);
    }
  }
  
  #topDarkModeToggle {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
  }
  
  #topDarkModeToggle:hover {
    animation: buttonGlow 2s ease-in-out infinite;
  }
  
  .dark #topDarkModeToggle:hover {
    animation: buttonGlowDark 2s ease-in-out infinite;
  }
  
  #topDarkModeToggle:active {
    transform: scale(0.9) rotate(15deg);
  }
</style>

